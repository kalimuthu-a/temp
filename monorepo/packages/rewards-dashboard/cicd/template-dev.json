{
        "kind": "Template",
        "apiVersion": "v1",
        "metadata": {
                "name": "${NAME}",
                "annotations": {
                        "tags": "${NAME}",
                        "iconClass": "icon-${NAME}",
                        "openshift.io/provider-display-name": "${NAME}-app"
                }
        },
        "labels": {
                "template": "${NAME}",
                "app": "${NAME}"
        },
        "objects": [
                {
                        "apiVersion": "v1",
                        "kind": "ImageStream",
                        "metadata": {
                                "name": "${NAME}"
                        },
                        "spec": {
                                "lookupPolicy": {
                                        "local": false
                                }
                        }
                },
                {
                        "apiVersion": "v1",
                        "kind": "BuildConfig",
                        "metadata": {
                                "labels": {
                                        "app": "${NAME}"
                                },
                                "name": "${NAME}"
                        },
                        "spec": {
                                "output": {
                                        "to": {
                                                "kind": "ImageStreamTag",
                                                "name": "${NAME}:latest"
                                        }
                                },
                                "source": {
                                        "binary": {
    
                                        },
                                        "type": "Binary"
                                },
                                "strategy": {
                                        "dockerStrategy": {
                                           "dockerfilePath": "packages/rewards-dashboard/Dockerfile"                                               
                                        }, 
                                        "type": "Docker"
                                }
                        }
                }
    
        ],
        "parameters": [
                {
                        "name": "NAME",
                        "displayName": "Name",
                        "required": true,
                        "description": "name of the application"
    
                },
                {
                        "name": "ENV_DEV",
                        "displayName": "Env",
                        "required": true,
                        "description": "Environment where it is deployed"
    
                },
                {
                        "name": "PROJECT_DEV",
                        "displayName": "Project",
                        "description": "Project name where it will be deployed",
                        "required": true
                }
        ]
    }